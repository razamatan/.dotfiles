# findep: find out what REALLY uses it
alias findep "find /var/db/pkg -name '*DEPEND' | xargs grep"

# envconf: configure using our environment
alias envconf "$(grep ^CFLAGS /etc/make.conf) ./configure"

# pscan: prints recent port scan activities
alias pscan "grep -hs 'PORT SCAN' /var/log/critical /var/log/iptables | sed -e 's:${HOSTNAME}.*SRC=::' -e 's: DST.*::' | uniq"

# music stuff
alias id3 "id3v2"

# financial crypt
