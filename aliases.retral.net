# findep: find out what REALLY uses it
alias findep "find /var/db/pkg -name '*DEPEND' | xargs grep"

# envconf: configure using our environment
[ -f /etc/make.conf ] && alias envconf "$(grep ^CFLAGS /etc/make.conf) ./configure"
[ -f /opt/local/etc/mk.conf ] && alias envconf "$(grep ^CFLAGS /opt/local/etc/mk.conf) ./configure"

# pscan: prints recent port scan activities
alias pscan "grep -hs 'PORT SCAN' /var/log/critical /var/log/iptables | sed -e 's:${HOSTNAME}.*SRC=::' -e 's: DST.*::' | uniq"

# music stuff
alias id3 "id3v2"

# financial crypt
alias mountFinance "sudo mount \$(sudo lofiadm -a /zshares/archive/.private -c aes-256-cbc) ~/.secure"
alias umountFinance "sudo umount ~/.secure; sudo lofiadm -d /zshares/archive/.private"

# synergy
alias synergy "synergys -f -a localhost"

alias etc-update "dispatch-conf"

alias dbssh "ssh -L 3307:esquire.jinyi.us:3306"

# vlc
alias nvlc "nvlc --no-color"
alias nvlc-podcast "nvlc -S podcast --podcast-urls"
alias radio 'nvlc --no-playlist-autostart "http://35.8.90.120:9000/listen.m3u" "http://kexp.org/kexp-wma.asx"'
