[core]
   editor = /usr/bin/vim
   excludesfile = ~/.dotfiles/bazaar/ignore
[alias]
   d = difftool --no-prompt
   df = difftool
   br = branch
   co = checkout
   st = status
   stp = status --porcelain
   staged = diff --staged --name-only
   stashed = stash list
   unadd = reset HEAD
   unstash = stash pop
[merge]
   tool = vimdiff
[rerere]
   enabled = true
[push]
   default = matching
[pull]
   rebase = true
[format]
   pretty = fuller

